<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/material_dynamic_primary10"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/sv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lbl_playstation"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:fontFamily="@font/playfair_display_sc_bold"
                android:text="@string/giochi_gratis_playstation_4"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="0dp"
                android:scrollbars="vertical"
                android:shadowColor="#000000"
                android:singleLine="false"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:verticalScrollbarPosition="defaultPosition"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp" />

            <ImageButton
                android:id="@+id/img_ps4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:backgroundTint="#000000"
                android:contentDescription="@string/ps4"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_ps4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp" />

            <ImageButton
                android:id="@+id/img_ps5"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#000000"
                android:contentDescription="@string/ps5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_ps5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp" />

            <ImageButton
                android:id="@+id/img_psvr"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#000000"
                android:contentDescription="@string/psvr"
                android:scaleType="center"
                android:src="@mipmap/ic_psvr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>